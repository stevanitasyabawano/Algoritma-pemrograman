class mahasiswa:
    
   def __init__(self,nama,nim,angkatan):
        
        self.nama = nama
        self.nim = nim
        self.angkatan = angkatan
        
   def biodata_mahasiswa(self):
       print("nama mu adalah : ",self.nama)
       print("nim mu adalah : ",self.nim)
       print("angkatan mu adalah : ",self.angkatan)
       
nama = str(input("masukkan nama mu : "))
nim = str(input("masukkan nim mu : "))
angkatan = str(input("masukkan angkatan mu : "))

biodata = mahasiswa(nama,nim,angkatan)
biodata.biodata_mahasiswa()
